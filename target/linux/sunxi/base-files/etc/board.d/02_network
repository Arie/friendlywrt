#!/bin/sh
#
# Copyright (C) 2013-2015 OpenWrt.org
#

. /lib/functions/uci-defaults.sh

board_config_update

case "$(board_name)" in
"olimex,a20-olinuxino-micro")
	ucidef_set_interface_lan 'wlan0'
	;;
"lamobo,lamobo-r1")
	ucidef_add_switch "switch0" \
		"4:lan:1" "0:lan:2" "1:lan:3" "2:lan:4" "3:wan" "8@eth0"
	;;
"xunlong,orangepi-r1")
	ucidef_set_interfaces_lan_wan "eth0" "eth1"
	;;
"friendlyarm,nanopi-r1")
	ucidef_set_interfaces_lan_wan "eth1" "eth0"
	;;
"friendlyarm,nanopi-m1-plus" \
|"friendlyarm,nanopi-duo2" \
|"friendlyarm,nanopi-neo-s")
	ucidef_set_interfaces_lan_wan "wlan0" "eth0"
	;;
"friendlyarm,nanopi-duo")
	ucidef_set_interfaces_lan_wan "wlan0" "eth0"
	;;
"friendlyarm,nanopi-neo"|"friendlyarm,nanopi-m1")
	ucidef_set_interface_wan "eth0"
	;;
"friendlyarm,nanopi-neo-air")
	ucidef_set_interface_lan "wlan0"
	;;
"friendlyarm,nanopi-neo-core")
	ucidef_set_interface_wan "eth0"
	;;
*)
	ucidef_set_interface_lan 'eth0'
	;;
esac

board_config_flush

exit 0
